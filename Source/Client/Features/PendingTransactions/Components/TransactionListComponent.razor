@inherits TransactionListComponentBase

<div class="container">
 
  <h4>Select Transactions To Pay</h4>
  @if (PendingTransactionState.ListOfTransactions.Count == 0)
  {
    <h3>Loading Transactions...allegedly...</h3>
  }
  else
  {
    <div class="m-2 bg-light h-50">

      @foreach (var trans in @PendingTransactionState.ListOfTransactions)
      {
        <TransactionComponent Gas="trans.Gas"
                              ToAddress="trans.ToAddress"
                              TransactionAmount="trans.TransactionAmount"
                              TxDate="trans.TxDate"
                              TxId="trans.TxId" />
      }
    </div>
  }
</div>